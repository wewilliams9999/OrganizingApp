@using Task = OrganizingApp.Models.Task;

@model IEnumerable<Task>

<br />
<h2>Tasks</h2>

<div style="display: block">
    <h6>Click a Task Id below to view notes about that task or to edit the task</h6>
    <a href="/Task/InsertTask/">Create a New Task</a>
</div>

<table class="table">
    <tr>
        <th>Task Id</th>
        <th>Task Description</th>
        @*<th>Notes</th>*@
        <th>Location</th>
        <th>Is the task completed?</th>

    </tr>

    @foreach (var task in Model)
    {
        <tr>
            <td><a href=/Task/ViewTask/@task.TaskId>@task.TaskId</a></td>
            @*above will make each taskId on our index page take us to that individual task*@
            <td>@task.TaskDesc</td>
            @*<td>@task.Notes</td>*@
            <td>@task.Location.Name</td>
            <td>@task.IsCompleted</td>
        </tr>
    }
</table>


