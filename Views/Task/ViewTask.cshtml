@using OrganizingApp;
@using Task = OrganizingApp.Models.Task;

@model Task

<h3>@Model.TaskDesc Information</h3>

<table class= "table">
    <tr>
        <th>Task ID</th>
        <th>Task</th>
        <th>Notes</th>
        <th>LocationId</th> 
        <th>IsCompleted</th>

    </tr>
    <tr>
        <td>@Model.TaskId</td>
        <td>@Model.TaskDesc</td>
        <td>@Model.Notes</td>
        <td>@Model.LocationId</td>
        <td>@Model.IsCompleted</td>

    </tr>
</table>

<div style="display:block">
    <a href="/Task/UpdateTask/@Model.TaskId">Update this Task</a>
</div>


@* below triggers the DeleteTask Controller method located in the Task Controller *@
<div style="display:block">
    @using (Html.BeginForm("DeleteTask", "Task", "Post"))
    {
                    <input type="hidden" asp-for="TaskId" value="@Model.TaskId"/>
                    <input type="submit" onclick="return confirm('Are you sure you want to delete this task?')" value="Delete this task"/>
    }
</div>
